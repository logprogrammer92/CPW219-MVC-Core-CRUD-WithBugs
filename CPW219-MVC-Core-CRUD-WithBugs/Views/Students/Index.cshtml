@model IEnumerable<CPW219_MVC_Core_CRUD_WithBugs.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-4 text-primary">
                    <i class="fas fa-graduation-cap me-2"></i>Students
                </h1>
                <a asp-action="Create" class="btn btn-success btn-lg">
                    <i class="fas fa-plus me-2"></i>Add New Student
                </a>
            </div>

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>Student Directory
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col" class="fw-bold">
                                        <i class="fas fa-user me-2"></i>
                                        @Html.DisplayNameFor(model => model.FirstName)
                                    </th>
                                    <th scope="col" class="fw-bold">
                                        <i class="fas fa-user-tag me-2"></i>
                                        @Html.DisplayNameFor(model => model.LastName)
                                    </th>
                                    <th scope="col" class="fw-bold">
                                        <i class="fas fa-birthday-cake me-2"></i>
                                        @Html.DisplayNameFor(model => model.DateOfBirth)
                                    </th>
                                    <th scope="col" class="text-center fw-bold">
                                        <i class="fas fa-cogs me-2"></i>Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    <tr>
                                        <td class="align-middle">
                                            <strong>@Html.DisplayFor(modelItem => item.FirstName)</strong>
                                        </td>
                                        <td class="align-middle">
                                            <strong>@Html.DisplayFor(modelItem => item.LastName)</strong>
                                        </td>
                                        <td class="align-middle">
                                            <span class="badge bg-info text-dark">
                                                @Html.DisplayFor(modelItem => item.DateOfBirth)
                                            </span>
                                        </td>
                                        <td class="text-center align-middle">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.StudentId" 
                                                   class="btn btn-outline-info btn-sm" 
                                                   data-bs-toggle="tooltip" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.StudentId" 
                                                   class="btn btn-outline-warning btn-sm"
                                                   data-bs-toggle="tooltip" title="Edit Student">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.StudentId" 
                                                   class="btn btn-outline-danger btn-sm"
                                                   data-bs-toggle="tooltip" title="Delete Student">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Pagination -->
            @if ((int)ViewData["TotalPages"] > 1)
            {
                <nav aria-label="Student pagination" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if ((bool)ViewData["HasPreviousPage"])
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@((int)ViewData["CurrentPage"] - 1)">
                                    <i class="fas fa-chevron-left me-1"></i>Previous
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">
                                    <i class="fas fa-chevron-left me-1"></i>Previous
                                </span>
                            </li>
                        }

                        @for (int i = 1; i <= (int)ViewData["TotalPages"]; i++)
                        {
                            <li class="page-item @(i == (int)ViewData["CurrentPage"] ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                            </li>
                        }

                        @if ((bool)ViewData["HasNextPage"])
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@((int)ViewData["CurrentPage"] + 1)">
                                    Next<i class="fas fa-chevron-right ms-1"></i>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">
                                    Next<i class="fas fa-chevron-right ms-1"></i>
                                </span>
                            </li>
                        }
                    </ul>
                </nav>

                <div class="text-center text-muted mt-2">
                    <small>
                        Showing page @ViewData["CurrentPage"] of @ViewData["TotalPages"]
                    </small>
                </div>
            }
        </div>
    </div>
</div>
